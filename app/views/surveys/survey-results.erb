<div class="container">
  <h1>Survey Name : <br><%= @survey.name %></h1>


 <table border="1" class="stats-table">
  <thead>
    <th>Question</th>
    <th>Choices</th>
    <th>Total Count</th>
    <th>Percentage</th>
  </thead>
  <tbody>
    <% @survey.questions.each do |question| %>
    <tr>
      <% question.options.each_with_index do |option,index| %>
    <td><%= question.text if index == 0 %></td>
    <% total_responses = question.responses.count %>
    <% option_count = option.responses.count %>
    <% percentage = (option_count / total_responses.to_f) * 100 %>
    <td><%= option.text %></td>
    <td><%= option.responses.count %></td>
    <td><div id="bar1" class="bar" style="width: <%= percentage %>%;"></div><%= percentage %> </td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
 </table>
 <br>
 <h2>Google Chart</h2>


</div>
